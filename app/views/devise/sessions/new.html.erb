<div class="loginPage">
  <button class="ui inverted basic button" id="signupLink">
    <%= link_to "Sign up", new_registration_path(resource_name) %>
  </button>


  <div class="mainTitle">
    <p>TrainingBuddies.</p>
  </div>

  <div class="secTitle">
    <p>Connect. Share. Train.</p>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'ui form', :id => 'loginForm'}) do |f| %>
    <div class="field">
      <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "inputField" %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "inputField" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me, class: "ui checkbox" %>
        <%= f.label :remember_me, id: "loginLabel" %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in", class: "ui inverted basic button", id: "loginButton" %>
    </div>

  <% end %>

  <div id="passwordLink">
    <%= link_to "Forgot your password?", new_password_path(resource_name) %>
  </div>

</div>


<style>
  body {
    background-image: url("<%=image_path('pic9.jpg')%>");
    background-position: fixed;
    background-size: 100%;
    background-repeat: no-repeat;
  }
</style>

<script>
  $('.field').on("click", changeOpacity);
  function changeOpacity(){
    console.log("change opacity");
    $('#loginForm').css('opacity','.9')
  };
</script>
