<div class="loginPage">
  <button class="ui inverted basic button" id="signupLink">
    <%= link_to "Log in", new_session_path(resource_name) %>
  </button>


  <div class="mainTitle">
    <p>TrainingBuddies.</p>
  </div>

  <div class="secTitle">
    <p>Connect. Share. Train.</p>
  </div>

</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => 'ui form', :id => 'signupForm'}) do |f| %>

  <div class="two fields">
    <div class="field">
      <%= f.text_field :first_name, autofocus: true, placeholder: "First Name" %>
    </div>
    <div class="field">
      <%= f.text_field :last_name, autofocus: true, placeholder: "Last Name" %>
    </div>
</div>

  <div class="field">
    <%= f.email_field :email, autofocus: true, placeholder: "Email Address" %>
  </div>

  <div class="field">
    <!-- <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br /> -->
    <%= f.password_field :password, autocomplete: "off", placeholder: "Password (6 characters minimum)" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password Confirmation" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "ui inverted basic button", id: "signupButton" %>
  </div>

<% end %>

<div class="popup">
  <%= devise_error_messages! %>
</div>


<style>
  body {
    background-image: url("<%=image_path('pic1.jpg')%>");
    background-position: fixed;
    background-size: 100%;
    background-repeat: no-repeat;
  }
</style>

<script>
  $('.field').on("click", changeOpacity);
  function changeOpacity(){
    console.log("change opacity");
    $('#signupForm').css('opacity','.9')
  };
</script>
