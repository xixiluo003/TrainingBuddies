<h3>creat new group from</h3>

<%= form_for @group do |f| %>
  <p>
    <%= f.label :group_name %><%= f.text_field :group_name %>
    <%= f.hidden_field :group_leader, value: current_user.id %>
    <%= f.label :group_type %><%= f.text_field :group_type %>
    <%= f.label :group_goal %><%= f.text_field :group_goal %>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>
