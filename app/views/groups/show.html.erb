<h1>SHOW GROUP</h1>

<!--+++++++ group info +++++++-->
<div id="groupinfo">
  <p>Group Name: <%= @group.group_name %></p>
  <p>Group Leader: <%= User.find(@group.user_id).first_name %></p>
  <p>Group Type: <%= @group.group_type %></p>
  <p>Group Goal: <%= @group.group_goal %></p>
  </br>
  <p>Group Members:</p>
  <% @users.each do |user| %>
    <%= user.first_name %></br>
  <% end %>
  <br />

  <%= form_tag(groups_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search Users" %>
    <%= submit_tag "Search" %>
  <% end %>

</div>

<!--+++++++ events +++++++-->
<p>Events</p>
<%= render :partial => "calendar" %>

<!--+++++++ create posts +++++++-->
<h3>Posts</h3>
<h4>New Posts</h4>
<%= form_for [current_user, @post] do |f| %>
  <p>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.hidden_field :group_id, value: @group.id %>
    <%= f.label :title %><%= f.text_field :title %>
    <%= f.label :content %><%= f.text_field :content %>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>

<!--+++++++ show posts +++++++-->
<h4>Current Post</h4>

<div id="post">
  <% @posts.each do |post| %>
    <h4>Post <%= post.id %></h4>
    <%= User.find(post.user_id).first_name %></br>
    <%= post.title %></br>
    <%= post.content %></br>
    <!--+++++++ comments +++++++-->
    <h5>Comments for post <%= post.id %></h5>
      <% @comments.each do |comment| %>
        <% if comment.post_id == post.id %>
          <%= User.find(comment.user_id).first_name %></br>
          <%= comment.content %></br>
        <% end %>
      <% end %></br>
      <!--+++++++ create comments +++++++-->
      <h5>Add New Comments</h5><br>
      <%= form_for [current_user, @comment] do |f| %>
        <p>
          <%= f.hidden_field :user_id, value: current_user.id %>
          <%= f.hidden_field :post_id, value: post.id %>
          <%= f.label :content %><%= f.text_field :content %>
        </p>
        <p><%= f.submit "Submit" %></p>
      <% end %>
  <% end %>
</div>
